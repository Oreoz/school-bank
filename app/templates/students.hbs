<div class="col-md-12">
  <div class="col-md-6">
    {{students-list
      students=model
      onDelete=(action 'deleteStudent')
      onEdit=(action 'editStudent')
    }}
  </div>

  <!-- Student Creation Tool -->
  <div class="col-md-6">
    <h3>New Student</h3>

    <div class="form-group">
      {{input value=firstName placeholder="First Name" class="form-control"}}
    </div>

    <div class="form-group">
      {{input value=lastName placeholder="Last Name" class="form-control"}}
    </div>

    <div class="form-group pull-right">
      <button class="btn btn-success" {{action "createStudent"}}>
        {{fa-icon "plus"}} Create Student
      </button>
    </div>
  </div>
</div>
