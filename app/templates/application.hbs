<!-- Menu Bar -->
<nav class="navbar navbar-light bg-navbar">
  {{link-to "School Bank" "index" class="navbar-brand"}}

  <ul class="nav navbar-nav">
    {{#active-link tagName="li" class="nav-item"}}
      {{#link-to "index" class="nav-link"}}
        {{fa-icon "home"}} Home
      {{/link-to}}
    {{/active-link}}

    {{#active-link tagName="li" class="nav-item"}}
      {{#link-to "dashboard" class="nav-link"}}
        {{fa-icon "tachometer"}} Dashboard
      {{/link-to}}
    {{/active-link}}

    {{#active-link tagName="li" class="nav-item"}}
      {{#link-to "student-track" class="nav-link"}}
        {{fa-icon "line-chart"}} Student Track
      {{/link-to}}
    {{/active-link}}

    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" data-toggle="dropdown">
        {{fa-icon "lock"}} Administration
      </a>
      <div class="dropdown-menu">
        {{! TODO: Fix the margin on the first menu object.}}
        {{#link-to "administration" class="nav-link" style="margin-left: 1rem;"}}
          {{fa-icon "tachometer"}} Dashboard
        {{/link-to}}

        {{#link-to "coins" class="nav-link"}}
          {{fa-icon "money"}} Coins
        {{/link-to}}

        {{#link-to "students" class="nav-link"}}
          {{fa-icon "graduation-cap"}} Students
        {{/link-to}}
      </div>
    </li>
  </ul>

  <div class="float-xs-right">
    {{#if session.isAuthenticated}}
      Currently logged in as {{session.currentUser.displayName}}
      <button class="btn btn-outline-danger" {{action "signOut"}}>
        {{fa-icon "google"}} Sign out
      </button>
    {{else}}
      <button class="btn btn-outline-success" {{action "signIn" "google"}}>
        {{fa-icon "google"}} Sign In
      </button>
    {{/if}}
  </div>
</nav>

<!-- TODO: Fix spacing -->
<div style="height:2em;">

</div>

<!-- Content -->
{{#if session.isAuthenticated}}
  <div class="container">
    {{outlet}}
  </div>
{{/if}}
