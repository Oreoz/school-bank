<!-- Menu Bar -->
<nav class="navbar navbar-light bg-faded">
  {{link-to "School Bank" "index" class="navbar-brand"}}

  <ul class="nav navbar-nav">
    {{#active-link tagName="li" class="nav-item"}}
      {{#link-to "index" class="nav-link"}}
        {{fa-icon "home"}} Home
      {{/link-to}}
    {{/active-link}}

    {{#active-link tagName="li" class="nav-item"}}
      {{#link-to "dashboard" class="nav-link"}}
        {{fa-icon "tachometer"}} Dashboard
      {{/link-to}}
    {{/active-link}}

    {{#active-link tagName="li" class="nav-item"}}
      {{#link-to "students" class="nav-link"}}
        {{fa-icon "graduation-cap"}} Students
      {{/link-to}}
    {{/active-link}}

    {{#active-link tagName="li" class="nav-item"}}
      {{#link-to "coins" class="nav-link"}}
        {{fa-icon "money"}} Coins
      {{/link-to}}
    {{/active-link}}
  </ul>

  <div class="float-xs-right">
    {{#if session.isAuthenticated}}
      Currently logged in as {{session.currentUser.displayName}}
      <button class="btn btn-outline-danger" {{action "signOut"}}>
        {{fa-icon "google"}} Sign out
      </button>
    {{else}}
      <button class="btn btn-outline-success" {{action "signIn" "google"}}>
        {{fa-icon "google"}} Sign In
      </button>
    {{/if}}
  </div>
</nav>

<!-- TODO: Fix spacing -->
<div style="height:2em;">

</div>

<!-- Content -->
{{#if session.isAuthenticated}}
  <div class="container">
    {{outlet}}
  </div>
{{/if}}
